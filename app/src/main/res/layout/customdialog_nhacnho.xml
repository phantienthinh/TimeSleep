<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:gravity="top"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#cd000000"
        android:gravity="center"
        android:lines="2"
        android:text="Bạn muốn lời nhắc nhở vào khi nào?"
        android:textColor="@color/textColor"
        android:textSize="30dp" />

    <LinearLayout
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:paddingLeft="@dimen/_20sdp"
            android:id="@+id/textSleep"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="9"
            android:gravity="center"
            android:text="Lúc Đi Ngủ"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/checkSleep"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/checked"

            />
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:paddingLeft="@dimen/_20sdp"
            android:id="@+id/text1Hour"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="9"
            android:gravity="center"
            android:text="Trước 1 Tiếng"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/check1Hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/checked"

            />
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:paddingLeft="@dimen/_20sdp"
            android:id="@+id/textView30P"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="9"
            android:gravity="center"
            android:text="Trước 30 Phút"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/check30P"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/checked" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:paddingLeft="@dimen/_20sdp"
            android:id="@+id/textView15P"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="9"
            android:gravity="center"
            android:text="Trước 15 Phút"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/check15P"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/checked"

            />
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorBackground"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:paddingLeft="@dimen/_20sdp"
            android:id="@+id/textView5P"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="9"
            android:gravity="center"
            android:text="Trước 5 Phút"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/check5P"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/checked"

            />
    </LinearLayout>
    <TextView
        android:id="@+id/textSave"
        android:layout_marginTop="1dp"
        android:background="#cd000000"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Save"
        android:textColor="@color/textColor"
        android:textSize="25sp" />

</LinearLayout>
</LinearLayout>