<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="#b1363434"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/title_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_13sdp"
            android:text="@string/Time_sleep"
            android:textColor="#f1ecec"
            android:textSize="@dimen/_20sdp" />

        <ImageView

            android:id="@+id/imageViewSetting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingBottom="@dimen/_12sdp"
            android:paddingLeft="@dimen/_22sdp"
            android:paddingTop="@dimen/_12sdp"
            android:src="@drawable/setting" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <FrameLayout
            android:id="@+id/fragmnet_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9">

        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:background="@color/colorBackground"
            android:visibility="gone"
            app:itemIconTint="#d3e4971b"
            app:itemTextColor="@color/textColor"
            app:menu="@menu/navigation" />

    </LinearLayout>

</LinearLayout>