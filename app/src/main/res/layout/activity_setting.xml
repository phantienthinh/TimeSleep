<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#b1363434"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/comeback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back"
                android:gravity="center"
                android:textColor="#d9c22b"
                android:textSize="@dimen/_18sdp" />
        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Tùy Chọn Giờ Đi Ngủ"
            android:textColor="#f1ecec"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <!--<TextView-->
        <!--android:id="@+id/txt_xong"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center"-->
        <!--android:text="Xong"-->
        <!--android:textColor="@color/textColor"-->
        <!--android:textSize="@dimen/_18sdp" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:gravity="bottom"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:text="Các Ngày Trong Tuần"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorBackground"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="7">

            <Button
                android:id="@+id/btn_t2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_toggle"
                android:text="T2" />

            <Button
                android:id="@+id/btn_t3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_toggle"
                android:text="T3" />

            <Button
                android:id="@+id/btn_t4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_toggle"
                android:text="T4" />

            <Button
                android:id="@+id/btn_t5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_toggle"
                android:text="T5" />

            <Button
                android:id="@+id/btn_t6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_toggle"
                android:text="T6" />

            <Button
                android:id="@+id/btn_t7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_toggle"
                android:text="T7" />

            <Button
                android:id="@+id/btn_cn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_toggle"
                android:text="CN" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@color/colorBackground"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_55sdp"
                android:layout_weight="7"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_15sdp"
                android:text="Lời Nhắc Đi Ngủ"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/textViewNhacNho"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:lines="1"
                android:text="15 Phút "
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@color/colorBackground"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_55sdp"
                android:layout_weight="7"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_15sdp"
                android:text="Âm Thanh Thức Giậy"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/textView_music"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:lines="1"
                android:text="Dậy Sớm "
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18sdp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:gravity="bottom"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="15dp"
            android:text="Âm Lượng Âm Thanh Thức Dậy"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_18sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorBackground"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_15sdp"
                android:text="Âm Lượng"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18sdp" />

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6.5"
                android:theme="@style/MySeekBarTheme" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>